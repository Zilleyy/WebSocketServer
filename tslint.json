{
  "extends": "tslint:recommended",
  "rules": {
    "ban-ts-ignore": true,
    "new-parens": true, // Require using () when instantiating a new object.
    "no-console": false, // Enable console logging for TypeScript.
    "no-empty": false,
    "prefer-for-of": true,
    "no-consecutive-blank-lines": true,
    "max-classes-per-file": false,
    "no-internal-module": false,
    "no-namespace": false,
    "no-var-requires": false,
    "no-unused-expression": false,
    "semicolon": true,
    "member-access": [
      true,
      "check-accessor",
      "check-constructor",
      "check-parameter-property"
    ],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "variable-declaration",
      "arrow-parameter",
      "property-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ]
  }
}